<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Servlet20000</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20000</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20001</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20001</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20002</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20002</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20003</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20003</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20004</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20004</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20005</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20005</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20006</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20006</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Servlet20007</servlet-name>
    <servlet-class>com.hdd.servlet.Servlet20007</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
    <servlet-name>Servlet20007</servlet-name>
    <url-pattern>/20007</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20006</servlet-name>
    <url-pattern>/20006</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20005</servlet-name>
    <url-pattern>/20005</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20004</servlet-name>
    <url-pattern>/20004</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20003</servlet-name>
    <url-pattern>/20003</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20002</servlet-name>
    <url-pattern>/20002</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20001</servlet-name>
    <url-pattern>/20001</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet20000</servlet-name>
    <url-pattern>/20000</url-pattern>
  </servlet-mapping>
  
  
  <!--将采用的字符编码配置成应用初始化参数而不是过滤器私有的初始化参数是因为在JSP和其他地方也可能需要使用-->  
  <context-param>
    <param-name>charset</param-name>
    <param-value>UTF-8</param-value>
  </context-param>
  <filter>
    <filter-name>ContentTypeFilter</filter-name>
    <filter-class>com.hdd.filter.ContentTypeFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>ContentTypeFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
  <filter>
    <filter-name>TokenFilter</filter-name>
    <filter-class>com.hdd.filter.TokenFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>TokenFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
